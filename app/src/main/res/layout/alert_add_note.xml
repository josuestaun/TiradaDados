<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" >

        <RadioButton
            android:id="@+id/Caras4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Caras" />

        <RadioButton
            android:id="@+id/Caras6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 Caras" />

        <RadioButton
            android:id="@+id/Caras8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 Caras" />

        <RadioButton
            android:id="@+id/Caras12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 Caras" />

        <RadioButton
            android:id="@+id/Caras20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 Caras" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110000014" >

        <RadioButton
            android:id="@+id/Dados1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Dado" />

        <RadioButton
            android:id="@+id/Dados2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Dados" />

        <RadioButton
            android:id="@+id/Dados3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Dados" />

        <RadioButton
            android:id="@+id/Dados4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Dados" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>